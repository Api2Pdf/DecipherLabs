@page "/admin/settings/configuration"
@model RaythaZero.Web.Areas.Admin.Pages.Configuration.Index

@{
    var pageTitle = "Configuration";
    Layout = "SidebarLayout";
    ViewData["Title"] = pageTitle;
    ViewData["ActiveMenu"] = pageTitle;
    ViewData["ExpandSettingsMenu"] = true;
}

<div class="row mb-4">
    <div class="col-xxl-7 col-xl-8 col-lg-9 col-md-12">
        @Html.Partial("_Partials/PageHeading", pageTitle)
        <div class="card border-0 shadow mb-4">
            <div class="card-body">
                <form asp-page="/Configuration/Index" method="post" novalidate>
                    <h5>Basic configuration</h5>
                    <div class="col-lg-12">
                        <div class="mb-3">
                            <label class="form-label raytha-required" asp-for="Form.OrganizationName"></label>
                            <input type="text" class="form-control @Model.HasError("OrganizationName")" asp-for="Form.OrganizationName" required>
                            <div class="invalid-feedback">@Model.ErrorMessageFor("OrganizationName")</div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="mb-3">
                            <label class="form-label raytha-required" asp-for="Form.WebsiteUrl"></label>
                            <input type="url" class="form-control @Model.HasError("WebsiteUrl")" asp-for="Form.WebsiteUrl" required>
                            <div class="invalid-feedback">@Model.ErrorMessageFor("WebsiteUrl")</div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="mb-3">
                            <label class="form-label raytha-required" asp-for="Form.TimeZone"></label>
                            <select class="form-select @Model.HasError("TimeZone")" asp-for="Form.TimeZone" asp-items="@(new SelectList(Model.AvailableTimeZones, "Key", "Value"))" required>
                            </select>
                            <div class="invalid-feedback">@Model.ErrorMessageFor("TimeZone")</div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="mb-3">
                            <label class="form-label raytha-required" asp-for="Form.DateFormat"></label>
                            <select class="form-select @Model.HasError("DateTimeFormat")" asp-for="Form.DateFormat" asp-items="@(new SelectList(Model.AvailableDateFormats, "Key", "Value"))" required>
                            </select>
                            <div class="invalid-feedback">@Model.ErrorMessageFor("DateTimeFormat")</div>
                        </div>
                    </div>
                    <hr/>
                    <h5>Default email settings</h5>
                    <p>When your platform sends emails, choose the name people see when they hit 'Reply' and the email where the replies will land. It helps control the conversation flow when recipients respond to your emails.</p>
                    <div class="col-lg-12">
                        <div class="mb-3">
                            <label class="form-label raytha-required" asp-for="Form.SmtpDefaultFromName"></label>
                            <input type="text" class="form-control @Model.HasError("SmtpDefaultFromName")" asp-for="Form.SmtpDefaultFromName" required aria-describedby="SmtpDefaultFromNameHelp">
                            <div class="invalid-feedback">@Model.ErrorMessageFor("SmtpDefaultFromName")</div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="mb-3">
                            <label class="form-label raytha-required" asp-for="Form.SmtpDefaultFromAddress"></label>
                            <input type="email" class="form-control @Model.HasError("SmtpDefaultFromAddress")" asp-for="Form.SmtpDefaultFromAddress" required>
                            <div class="invalid-feedback">@Model.ErrorMessageFor("SmtpDefaultFromAddress")</div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success mt-4">Save changes</button>
                </form>
            </div>
        </div>
    </div>
</div>
