@page "/admin/email-templates/edit/{id}"
@model RaythaZero.Web.Areas.Admin.Pages.EmailTemplates.Edit

@{
    var pageTitle = "Edit template";
    Layout = "SubActionLayout";
    ViewData["Title"] = pageTitle;
    ViewData["ActiveMenu"] = "Email Templates";
    ViewData["ActiveSubMenu"] = "Edit";
}
@(await Html.PartialAsync("_Partials/BackToList", "/EmailTemplates/Index"))
<form asp-page="/EmailTemplates/Edit" asp-route-id="@Model.Form.Id" method="post" class="py-4" novalidate>
    <div class="col-lg-12">
        <div class="mb-3">
            <label class="form-label raytha-required" asp-for="Form.Subject"></label>
            <input type="text" class="form-control @Model.HasError("Label")" asp-for="Form.Subject" required>
            <div class="invalid-feedback">@Model.ErrorMessageFor("Label")</div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="mb-3">
            <label class="form-label" asp-for="Form.DeveloperName"></label>
            <input type="text" class="form-control @Model.HasError("DeveloperName")" asp-for="Form.DeveloperName" readonly>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="mb-3">
            <label class="form-label" asp-for="Form.Content"></label><br/>
            <textarea asp-for="Form.Content" rows="20" class="form-control @Model.HasError("Content")"></textarea>
            <div class="invalid-feedback">@Model.ErrorMessageFor("Content")</div>
        </div>
    </div>
    <input type="hidden" asp-for="Form.Id">
    <button type="submit" class="btn btn-success mt-4">Publish changes</button>
</form>