@page "/login/forgot-password/complete/{token?}"
@model RaythaZero.Web.Areas.Public.Pages.Login.ForgotPasswordComplete

@{
    Layout = "EmptyLayout";
}
<div class="main-container fullscreen">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-5 col-lg-6 col-md-7">
                <div class="text-center">
                    <h1 class="h2">Password Reset</h1>
                    <p class="lead">Set a new password to complete the password reset.</p>
                    @if (ViewData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger mt-2">
                            @ViewData["ErrorMessage"]
                        </div>
                    }

                    @if (ViewData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success mt-2">
                            @ViewData["SuccessMessage"]
                        </div>
                    }
                    <form method="post" asp-page="/Login/ForgotPasswordComplete" novalidate>
                        <div class="form-group">
                            <input class="form-control @Model.HasError("NewPassword")" type="password" placeholder="New Password" asp-for="Form.NewPassword" />
                            <div class="invalid-feedback">@Model.ErrorMessageFor("NewPassword")</div>
                            <div class="form-text">Password must be at least 8 characters.</div>
                        </div>
                        <div class="form-group">
                            <input class="form-control @Model.HasError("ConfirmNewPassword")" type="password" placeholder="Confirm New Password" asp-for="Form.ConfirmNewPassword" />
                            <div class="invalid-feedback">@Model.ErrorMessageFor("ConfirmNewPassword")</div>
                            <div class="form-text">Password must match the above.</div>
                        </div>
                        <input type="hidden" asp-for="Form.Id">
                        <button class="btn btn-lg btn-block btn-success" role="button" type="submit">
                            Save changes
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>