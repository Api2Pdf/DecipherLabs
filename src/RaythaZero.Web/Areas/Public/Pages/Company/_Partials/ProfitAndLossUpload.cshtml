@using RaythaZero.Web.Areas.Public.Pages.Shared._Partials
@model RaythaZero.Web.Areas.Public.Pages.Company.Index

<turbo-frame id="profit_and_loss_file_frame">
    <div class="card-list-body">
        <h6>Profit and loss</h6>
        @if (string.IsNullOrEmpty(Model.Form.ProfitAndLossMediaId))
        {
            @Html.Partial("Shared/_Partials/FileUpload/Index", new IndexViewModel
            {
                MaxFiles = 1,
                SuccessEndpoint = Url.Page("/Company/Index", "ProcessProfitAndLossUpload"),
            })
        }
        @if (!string.IsNullOrEmpty(Model.Form.ProfitAndLossMediaId))
        {
            <div class="card card-task">
                <div class="card-body">
                    <div class="card-title">
                        <h6><a target="_blank" asp-controller="MediaItems" asp-action="RedirectToFileUrlById" asp-route-id="@Model.Form.ProfitAndLossMediaId">@Model.Form.ProfitAndLossMediaId</a></h6>
                    </div>
                    <div class="card-meta">
                        <a class="nav-link d-inline-flex align-items-center justify-content-center text-danger" asp-page="/Company/Index" asp-page-handler="DeleteProfitAndLossUpload">
                            Delete
                        </a>
                    </div>
                </div>
                <input type="hidden" asp-for="Form.ProfitAndLossMediaId"/>
            </div>
        }
    </div>
</turbo-frame>
