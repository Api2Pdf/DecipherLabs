@using RaythaZero.Web.Areas.Public.Pages.Shared._Partials
@model RaythaZero.Web.Areas.Public.Pages.Company.Index
    
<turbo-frame id="previous_cost_volume_word_file_frame">
    <div class="card-list-body">
        <h6>Word file</h6>
        @if (string.IsNullOrEmpty(Model.Form.PreviousCostVolumeWordMediaId))
        {
            @Html.Partial("Shared/_Partials/FileUpload/Index", new IndexViewModel
            {
                MaxFiles = 1,
                SuccessEndpoint = Url.Page("/Company/Index", "ProcessPreviousCostVolumeWordUpload"),
                AllowedFileTypes = new List<string> { ".doc", ".docx" }
            })
        }
        @if (!string.IsNullOrEmpty(Model.Form.PreviousCostVolumeWordMediaId))
        {
            <div class="card card-task">
                <div class="card-body">
                    <div class="card-title">
                        <h6><a target="_blank" asp-controller="MediaItems" asp-action="RedirectToFileUrlById" asp-route-id="@Model.Form.PreviousCostVolumeWordMediaId">@Model.Form.PreviousCostVolumeWordMediaId</a></h6>
                    </div>
                    <div class="card-meta">
                        <a class="nav-link d-inline-flex align-items-center justify-content-center text-danger" asp-page="/Company/Index" asp-page-handler="DeletePreviousCostVolumeWordUpload">
                            Delete
                        </a>
                    </div>
                </div>
                <input type="hidden" asp-for="Form.PreviousCostVolumeWordMediaId"/>
            </div>
        }
    </div>
</turbo-frame>
