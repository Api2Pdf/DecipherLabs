@using RaythaZero.Web.Areas.Public.Pages.Shared._Partials
@model RaythaZero.Web.Areas.Public.Pages.Company.Index
<turbo-frame id="wage_rate_file_frame">
    <div class="card-list">
        <div class="card-list-head">
            <h6>Wage Rates</h6>
        </div>
        <div class="card-list-body">
            @if (string.IsNullOrEmpty(Model.Form.WageRateSheetMediaId))
            {
                @Html.Partial("Shared/_Partials/FileUpload/Index", new IndexViewModel
                {
                    MaxFiles = 1,
                    SuccessEndpoint = Url.Page("/Company/Index", "ProcessWageRatesUpload"),
                    ContainerId = "wage_rates"
                })
            }
            @if (!string.IsNullOrEmpty(Model.Form.WageRateSheetMediaId))
            {
                <div class="card card-task">
                    <div class="card-body">
                        <div class="card-title">
                            <h6>@Model.Form.WageRateSheetMediaId</h6>
                        </div>
                        <div class="card-meta">
                            <a class="nav-link d-inline-flex align-items-center justify-content-center text-danger" asp-page="/Company/Index" asp-page-handler="DeleteWageRatesUpload">
                                Delete
                            </a>
                        </div>
                    </div>
                    <input type="hidden" asp-for="Form.WageRateSheetMediaId" />
                </div>
            }
        </div>
    </div>
</turbo-frame>
